<!DOCTYPE html>
<html>
<head>
    <title>La Poire En Deux</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="container">
            <div class="row">
                <%= image_tag "logo.jpg", {class: 'col-xs-2 header-titre'} %>
                <%= link_to 'La Poire en Deux', root_path, class: 'navbar-brand col-xs-8' %>
                <div class="header-panier col-xs-2">
                    <%= link_to shopping_cart_path do %>
                      <%= image_tag "panier.png", class: 'col-xs-2' %>
                      <p class="text-center price"><%= number_to_currency @shopping_cart.total %></p>
                    <% end %>
                </div>
            </div>
        </div>
        <div id="navbar" class="collapse navbar-collapse navbar-right row">
            <ul class="nav navbar-nav">
                <li class="active col-md-2 text-center-md"><%= link_to 'Accueil', root_path, {class: 'text-center'} %></li>
                <li class="col-md-2"><%= link_to 'Fermes', farms_path, {class: 'text-center'} %></li>
                <li class="col-md-2"><%= link_to 'Utilisateurs', users_path, {class: 'text-center'} %></li>
                <li class="col-md-2"><%= link_to 'Produits', products_path, {class: 'text-center'} %></li>
                <li class="col-md-2"><%= link_to 'Produits', products_path, {class: 'text-center'} %></li>
                <li class="col-md-2"><%= link_to 'Produits', products_path, {class: 'text-center'} %></li>
                <% if signed_in? %>
                    <li><%= link_to current_user.email, edit_user_registration_path %></li>
                    <li><%= link_to "DÃ©connexion", destroy_user_session_path, method: :delete %></li>
                <% else %>
                    <li><%= link_to t('devise.shared.links.sign_up'), new_user_registration_path %></li>
                    <li><%= link_to t('devise.shared.links.sign_in'), new_user_session_path %></li>
                <% end %>
            </ul>
        </div>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
    </div>
</nav>
<div class="container">
    <p id="notice"><%= notice %></p>
    <%= yield %>
</div>
</body>
</html>
