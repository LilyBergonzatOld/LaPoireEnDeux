<!DOCTYPE html>
<html>
<head>
  <title>LaPoireEnDeux</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'La Poire en Deux', root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar" class="collapse navbar-collapse navbar-right">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to 'Accueil', root_path %></li>
          <li><%= link_to 'Fermes', farms_path %></li>
          <li><%= link_to 'Utilisateurs', users_path %></li>
          <li><%= link_to 'Produits', products_path %></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <p id="notice"><%= notice %></p>
    <%= yield %>
  </div>
</body>
</html>
