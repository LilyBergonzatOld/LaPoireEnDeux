<!DOCTYPE html>
<html>
<head>
    <title>La Poire En Deux</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-static-top" id='header'>
    <div class="container">
		<div class='navbar-brand'>
			<h1><%= link_to image_tag("logo-horizontal.png", {class:'header-titre', alt:'La poire en deux'}) %></h1>
		</div>
        <div id="navbar" class="collapse navbar-collapse navbar-right row">
            <ul class="nav navbar-nav">
                <li class="active text-center-md"><%= link_to 'Accueil', root_path, {class: 'text-center'} %></li>
				<li><%= link_to 'Concept', farms_path, {class: 'text-center'} %></li>
				<li><%= link_to 'Équipe', users_path, {class: 'text-center'} %></li>
				<li><%= link_to 'Contact', products_path, {class: 'text-center'} %></li>
                <% if signed_in? %>
                    <li><%= link_to current_user.email, edit_user_registration_path, {class: 'text-center'} %></li>
					<li><%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: 'text-center' %></li>
                <% else %>
					<li><%= link_to "Connexion", new_user_session_path, {class: 'text-center'} %></li>
				    <li><%= link_to "Inscription", new_user_registration_path, class: 'text-center' %></li>
                <% end %>
				<li>
					<%= link_to shopping_cart_path, class:'header-panier' do %>
                      <%= image_tag "panier.png" %>
                      <p class="text-center price"><%= number_to_currency @shopping_cart.total %></p>
                 	<% end %>
				</li>
            </ul>
        </div>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
    </div>
</nav>
<div class="container">
    <p id="notice"><%= notice %></p>
    <%= yield %>
</div>
</body>
</html>
