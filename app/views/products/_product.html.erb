<div class="row product-detail">
  <img src='https://www.organicfacts.net/wp-content/uploads/2013/05/Fruits3.jpg' class='col-sm-6 col-xs-12' alt='produit'/>
  <div class='col-sm-6 col-xs-12 description'>
    <div class='row'>
      <h3 class='title'><%= product %></h3>
      <p class="price"><%= number_to_currency product.price %></p>
      <p class="farm-name col-xs-12"><%= product.farm.name %></p>
      <p class='details col-xs-12'><%= product.description %></p>
      <% if product.farm.owner_id!=current_user.id %>
      <%= link_to 'Ajoutez au panier', shopping_cart_path(product_id: product.id), method: :post , class: 'btn btn-primary btn-sm add_panier' %>
      <% end %>
      <% if product.farm.owner==current_user %>
        <%= link_to 'Editez', edit_product_path(product), class:'btn btn-success btn-sm edit'  %>
        <%= link_to 'Supprimer', product, method: :delete, data: { confirm: 'Vous Ãªtes sur ?' }, class: 'btn btn-danger btn-sm delete' %>
      <% end %>
    </div>
  </div>
</div>
