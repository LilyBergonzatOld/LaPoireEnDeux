
<%= simple_form_for @product do |f| %>
<div class="form-inputs">
  <%= f.input :name, :label =>'Nom produit' %>
  <%= f.input :price, :label =>'Prix' %>
  <div class="form-group string optional farm_descritption">
    <label class="string optional control-label" for="farm_description">Description</label>
    <%= f.text_area :description %>
  </div>
  <%= f.association :farm, :label=> 'Ferme'%>
</div>
<div class="form-actions">
  <%= f.button :submit, :value=>'Validez' %>
</div>
<% end %>
