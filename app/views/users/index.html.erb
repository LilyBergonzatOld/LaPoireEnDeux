<h1>Utilisateurs</h1>
<%= link_to 'New User', new_user_path, class: 'btn btn-default' %>

<table class="table">
    <thead>
    <tr>
        <th>Nickname</th>
        <th>Email</th>
        <th>Status</th>
        <th>Téléphone</th>
        <th>Dernière Connexion</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= link_to user, user %></td>
            <td><%= user.email %></td>
            <td><%= user.status %></td>
            <td><%= user.phone %></td>
            <td><%= user.last_sign_in_at %></td>
            <td>
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
